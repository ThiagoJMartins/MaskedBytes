---
// src/layouts/Layout.astro
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/maskedbytes.svg" />
     <meta name="description" content="Masked Bytes, unmasking innovation, one byte at a time.">
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="Masked Bytes - Desarrollo de Software Personalizado">
    <meta property="og:description" content="Masked Bytes, unmasking innovation, one byte at a time.">
    <meta property="og:url" content="https://maskedbytes.tech">
    <meta property="og:type" content="website">
    <meta property="og:image" content="/maskedbytes.svg"> <!-- Cambia esta URL a la de tu imagen -->
    
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  </head>
  <body class="bg-gray-900 text-gray-100 font-['Space_Grotesk',sans-serif]">
    <slot />
  </body>
</html>

