---
// src/components/Header.astro
---

<header class="px-4 lg:px-6 h-20 flex items-center justify-between border-b border-gray-800">
  <a href="#" class="flex items-center justify-center">
    <img src="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/Logo-Hp3E6j8zPplXtVuRbgPLS0mHr3PioO.png" alt="Masked Bytes Logo" width="50" height="50" class="mr-2" />
    <span class="text-2xl font-bold">Masked Bytes</span>
  </a>
  <button id="menu-toggle" class="lg:hidden text-gray-300 hover:text-white focus:outline-none">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
    </svg>
  </button>
  <nav id="mobile-menu" class="hidden lg:flex lg:items-center lg:w-auto w-full absolute top-20 left-0 bg-gray-900 lg:bg-transparent lg:relative lg:top-0">
    <div class="lg:flex-grow lg:flex lg:items-center lg:w-auto w-full lg:px-0 px-4 py-2">
      <a class="block mt-4 lg:inline-block lg:mt-0 text-gray-300 hover:text-white mr-4" href="#features">Features</a>
      <a class="block mt-4 lg:inline-block lg:mt-0 text-gray-300 hover:text-white mr-4" href="#about">About</a>
      <a class="block mt-4 lg:inline-block lg:mt-0 text-gray-300 hover:text-white mr-4" href="#works">Our Works</a>
      <a class="block mt-4 lg:inline-block lg:mt-0 text-gray-300 hover:text-white" href="#contact">Contact</a>
    </div>
  </nav>
</header>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');

  if (menuToggle && mobileMenu) {
    menuToggle.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>