---
import { Image } from "astro:assets";
import logo from "../assets/maskedBytes.svg";
---

<header class="fixed w-full z-30 glass">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="flex items-center">
      <Image src={logo} alt="MaskedBytes Logo" width={40} height={40} />
      <span class="ml-2 text-xl font-bold">MaskedBytes</span>
    </a>
    <nav>
      <ul class="flex space-x-6">
        <li>
          <a
            href="#servicios"
            class="hover:text-gray-300 glass-hover px-3 py-2 rounded transition-colors duration-300"
            >Servicios</a
          >
        </li>
        <li>
          <a
            href="#portfolio"
            class="hover:text-gray-300 glass-hover px-3 py-2 rounded transition-colors duration-300"
            >Portfolio</a
          >
        </li>
        <li>
          <a
            href="#nosotros"
            class="hover:text-gray-300 glass-hover px-3 py-2 rounded transition-colors duration-300"
            >Nosotros</a
          >
        </li>
        <li>
          <a
            href="#contacto"
            class="hover:text-gray-300 glass-hover px-3 py-2 rounded transition-colors duration-300"
            >Contacto</a
          >
        </li>
      </ul>
    </nav>
  </div>
</header>
