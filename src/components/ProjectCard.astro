---
// src/components/ProjectCard.astro
interface Props {
  title: string;
  description: string;
  image: string;
}

const { title, description, image } = Astro.props;
---

<div class="bg-gray-800 border-gray-700 rounded-lg overflow-hidden">
  <img src={image} alt={title} class="w-full h-[200px] object-cover" />
  <div class="p-4">
    <h3 class="text-xl font-bold text-gray-100">{title}</h3>
    <p class="text-gray-400 mt-2">{description}</p>
  </div>
</div>